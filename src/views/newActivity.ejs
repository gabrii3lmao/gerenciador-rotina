<h2 class="page-title">
  Nova atividade
  <span class="page-subtitle"><%= day.weekday %></span>
</h2>

<form
  class="activity-form"
  action="/days/<%= day._id %>/activities?_method=POST"
  method="POST"
>
  <div class="form-group">
    <label for="title">Título</label>
    <input
      id="title"
      type="text"
      name="title"
      placeholder="Ex: Estudar JavaScript"
      required
      autofocus
    />
  </div>

  <div class="form-group duration-group">
    <label for="durationMin">Duração (min)</label>
    <input
      id="durationMin"
      type="number"
      name="durationMin"
      min="1"
      placeholder="30"
      required
    />
  </div>

  <button type="submit" class="primary-btn">
    Criar
  </button>
</form>
